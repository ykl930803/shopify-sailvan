<div class="mdl-container" data-id="email">
    <div class="mdl">
        <div class="mdl-header-mobile d-lg-none d-md-flex d-sm-flex">
            <img src="https://cdn.shopify.com/s/files/1/0625/2684/9277/files/Mobile-Logo.png?v=1712901571">
            <span class="mdl-close close">
                <i class="fa-solid fa-xmark"></i>
            </span>
        </div>
        <div class="mdl-header d-lg-flex d-md-none d-sm-none">
            <h6 class="mdl-title">
                Vanpowers {{ product.title }}
            </h6>
            <span class="mdl-close close">
                <i class="fa-solid fa-xmark"></i>
            </span>
        </div>
        <div class="mdl-body">
            <div class="row d-lg-none d-md-flex d-sm-flex">
                <div class="col-12 text-center mb-4">
                    <h6 class="mdl-title">
                        Vanpowers {{ product.title }}
                    </h6>
                </div>
            </div>
            {% form 'contact', id: 'form-notify' %}

                <input type="hidden" name="contact[form]" value="Vanpowers - Product Notify When Available">
                <input type="hidden" name="contact[product_title]" value="{{ product.title }}">
                <input type="hidden" name="contact[product_id]" value="{{ product.id }}">
                <input type="hidden" name="contact[body]" value="Notify this email when this product is available.">

                <div class="row g-4">
                    <div class="col-12">
                        <div class="form-group">
                            <label>Send me an email when this product is available</label>
                            <input type="text" name="contact[variant]" value="{{ product.selected_or_first_available_variant.title }}" required readonly>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label>Email <span>*</span></label>
                            <input type="email" name="contact[email]" required>
                        </div>
                    </div>
                    <div class="col-12 success-hide">
                        <div class="form-group">
                            <button type="submit" class="btn btn-modal">Notify me when available</button>
                        </div>
                    </div>

                    {% if form.posted_successfully? %}
                        <script>
                            document.addEventListener("DOMContentLoaded", function() {
                                document.querySelector('.mdl-container[data-id="email"]').style.display = 'block';
                                document.querySelector('.mdl-container .success-hide').style.display = 'none';
                            });
                        </script>
                        <div class="col-12">
                            <div class="form-group">
                                <div class="alert success">
                                    You're in! We'll let you know when it's back. <a class="close" href="javascript:void(0)">Close</a>
                                </div>
                            </div>
                        </div>
                    {% elsif form.errors %}
                        <script>
                            document.addEventListener("DOMContentLoaded", function() {
                                document.querySelector('.mdl-container[data-id="email"]').style.display = 'block';
                            });
                        </script>
                        <div class="col-12">
                            <div class="form-group">
                                <div class="alert error">
                                    There's a problem sending your request. Try again.
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    
                </div>
            {% endform %}
        </div>
    </div>
</div>