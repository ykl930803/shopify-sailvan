<section id="shopify-section--{{ section.id }}" class="testimonials">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="testimonials-wrapper d-flex align-items-center justify-content-between">
                    <div class="testimonials-texts d-table">
                        <div class="testimonials-inner">
                            {%- if section.settings.testimonial_heading != blank -%}
                                <div class="testimonial-heading">
                                    {{ section.settings.testimonial_headingTag }}{{ section.settings.testimonial_heading }}
                                </div>
                            {% endif %}

                            {%- if section.settings.button_link != blank -%}
                                <div class="testimonial-button">
                                    <a href="{{ section.settings.button_link }}" class="btn btn-light mt-4">
                                        Learn more
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="client-says d-flex justify-content-end position-relative">
                        <div class="swiper-testimonials">
                            <div class="swiper-wrapper">
                                {%- for block in section.blocks -%}
                                    <div class="client-says-item swiper-slide">

                                        <div class="autor-reviews mb-3 d-flex flex-direction-row justify-content-between">
                                            {%- if block.settings.author_name != blank -%}
                                                <div class="author-name">
                                                    {{ block.settings.author_name }}
                                                </div>
                                            {% endif %}

                                            <div class="rating">
                                                {% for star in (1..5) %}
                                                    {% if star <= block.settings.rating %}
                                                        <span class="star filled">&#9733;</span>
                                                    {% else %}
                                                        <span class="star">&#9733;</span>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>

                                        </div>
                                        
                                        {%- if block.settings.author_says != blank -%}
                                            <div class="author-says">
                                                {{ block.settings.author_says }}
                                            </div>
                                        {% endif %}
                                    </div>
                                {%- endfor -%}
                            </div>
                        </div>
                         <!-- swiper navigation for mobile -->
                         <div class="swiper-navigations mobile">
                            <div class="swiper-button-prev navigation-button"></div>
                            <div class="swiper-button-next navigation-button"></div>
                        </div>
                        <!-- swiper navigation -->
                        <div class="swiper-navigations">
                            <div class="swiper-button-next navigation-button"></div>
                            <div class="swiper-button-prev navigation-button"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>