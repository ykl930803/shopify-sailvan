<section id="hnz-support-service">
    <div class="container section-content">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="title">
                    {{ section.settings.title }}
                </h2>
            </div>
            <div class="col-12">
                <div class="row services-row">
                    {% for block in section.blocks %}
                        <div class="col-lg-3 col-md-6 col-sm-6">
                            <div class="service">
                                <img src="{{ block.settings.icon | img_url: 'master'  }}">
                                <h6 class="service-title">
                                    {{ block.settings.title }}
                                </h6>
                                <p class="service-body">
                                    {{ block.settings.body }}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Support Services",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "Service",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "textarea",
                        "id": "body",
                        "label": "Body"
                    },
                    {
                        "type": "image_picker",
                        "id": "icon",
                        "label": "Icon"
                    }
                ]
            }
        ]
    }
{% endschema %}