{% render 'reusableComponent-twoColumnAnimation' %}

<style>
    section.twoColumn-animation {
        padding-top: {{ section.settings.section_paddingTop }}px;
        padding-bottom: {{ section.settings.section_paddingBottom }}px;
    }
    section.twoColumn-animation .container {
        margin-top: 130px;
    }
    section.twoColumn-animation .container .title {
        position: relative;
        z-index: 2;
    }
    section.twoColumn-animation .container .title span {
        font-size: 48px;
        font-weight: 700;
        color: #333;
        line-height: 1.2em;
    }
    section.twoColumn-animation .container .title span p {
        line-height: 28px;
        font-size: 18px;
        margin-top: 35px;
        margin-bottom: 0;
    }
    section.twoColumn-animation .container .title span:not(:first-child) {
        position: absolute;
        top: 0;
        left: 0;
    }
    section.twoColumn-animation .container .twoColumn-desktopAnimation {
        display: flex;
        flex-direction: row;
    }
    section.twoColumn-animation .container .images-wrapper {
        padding-right: 100px;
    }
    section.twoColumn-animation .container .images-wrapper .images {
        position: relative;
    }
    section.twoColumn-animation .container .images-wrapper .images div:not(:first-child) {
        position: absolute;
        top: 0;
        right: 0;
        width: 100%;
    }
    section.twoColumn-animation .container .images-wrapper .images div img {
        width: 100%;
        border-radius: 20px;
        object-fit: cover;
        min-height: 570px;
        height: 1px;
    }
    section.twoColumn-animation .container .twoColumn-mobileAnimation {
        display: none;
    }
    

