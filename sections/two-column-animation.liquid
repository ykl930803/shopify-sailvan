    @media only screen and (min-width: 992px) and (max-width: 1199px) {
        section.twoColumn-animation .container {
            margin-top: 40px;
        }
        section.twoColumn-animation .container .right-headingText .title span {
            font-size: 40px;
        }
        section.twoColumn-animation .container .images-wrapper {
            padding-right: 50px;
        }
    }
    
