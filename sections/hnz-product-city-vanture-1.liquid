                            <div class="bordered">
                                <h6 class="reco-title">
                                    Find your recommended size and saddle height
                                </h6>
                                <div class="suggested">
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <div class="recommended">
                                                <h5 class="rec size">
                                                    
                                                </h5>
                                                <p class="rec-title">
                                                    Recommended Size
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="recommended">
                                                <h5 class="rec saddle">
                                                    
