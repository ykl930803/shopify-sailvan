                            <model-viewer class="model-3d" src="{{ product.metafields.custom.model_viewer }}" auto-rotate camera-controls></model-viewer>
                        {% endif %}

                        <div class="owl-carousel" id="option-carousel">
                            {% for media in product.media %}
                                {% case media.media_type %}
