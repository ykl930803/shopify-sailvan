<div class="grandteton-comparison section-content container" {% if section.settings.show == false %}style="display: none;"{% endif %}>
  <div class="title">Comparison</div>
  <table class="comparison-table d-lg-block d-md-block d-sm-none">
    <tbody>
      <tr>
        <th scope="row"></th>
        {% if product.metafields.custom._series %}
          {% assign products_in_collection = product.metafields.custom._series.value.products %}
          {% for product in products_in_collection %}
            <td class="center-item">
              <div class="product-image-wrapper">
                <img src="{{ product.featured_image.src | image_url }}" width="250">
              </div>
              <div class="product-title">{{ product.title }}</div>
              <a class="learn-btn" href="{{ product.url }}">Learn More</a>
            </td>
          {% endfor %}
        {% endif %}
        {% comment %} {% for collection in product.collections %}
          {% if collection.handle == 'grandteton-series' %}
            {% assign products_in_collection = collection.products %}
            {% for product in products_in_collection %}
              <td class="center-item">
                <div class="product-image-wrapper">
                  <img src="{{ product.featured_image.src | image_url }}" width="250">
                </div>
                <div class="product-title">{{ product.title }}</div>
                <a class="learn-btn" href="{{ product.url }}">Learn More</a>
              </td>
            {% endfor %}
          {% endif -%}
        {% endfor %} {% endcomment %}
      </tr>
      {% comment %} <tr>
        <th scope="row">Color</th>
        <td class="center-item">
          <div class="color-wrapper">
            <span class="silver color-item"></span>
            <span class="red color-item"></span>
          </div>
          Galaxy Silver/ Lava Red And Coke Black</td>
        <td class="center-item">
          <div class="color-wrapper">
            <span class="silver color-item"></span>
            <span class="red color-item"></span>
          </div>
          Galaxy Silver/ Lava Red And Coke Black</td>
      </tr> {% endcomment %}
      {% for item in product.metafields.custom.comparison.value.list %}
        {% if item.title == 'Color' %}
          <tr>
            <th>{{ item.title }}</th>
            <td class="center-item">
              <div class="color-wrapper">
                {% for color in item.gtu.colors %}
                  <span class="color-item" style="background: {{ color }}"></span>
                {% endfor %}
              </div>
              {{ item.gtu.value}}
            </td>
            <td class="center-item">
              <div class="color-wrapper">
                {% for color in item.gtp.colors %}
                  <span class="color-item" style="background: {{ color }}"></span>
                {% endfor %}
              </div>
              {{ item.gtp.value}}
            </td>
            {% comment %} <td class="center-item">{{ item.gtp}}</td> {% endcomment %}
          </tr>
          {% else %}
          <tr>
            <th>{{ item.title }}</th>
            <td class="center-item">{{ item.gtu | newline_to_br}}</td>
            <td class="center-item">{{ item.gtp | newline_to_br}}</td>
          </tr>
        {% endif %}
      {% endfor %}
    </tbody>
  </table>
  <div class="d-lg-none d-md-none d-sm-block d-sm-look">
    <div class="com-item row">
      {% if product.metafields.custom._series %}
        {% assign products_in_collection = product.metafields.custom._series.value.products %}
        {% for product in products_in_collection %}
          <div class="text-center col-6 details">
            <div class="product-image-wrapper">
              <img src="{{ product.featured_image.src | image_url}}" width="150">
            </div>
            <div class="item-title-top">{{ product.title }}</div>
            <a class="learn-btn" href="{{ product.url }}">Learn More</a>
          </div>
        {% endfor %}
      {% endif %}
      {% comment %} {% for collection in product.collections %}
        {% if collection.handle == 'grandteton-series' %}
          {% assign products_in_collection = collection.products %}
          {% for product in products_in_collection %}
            <div class="text-center col-6 details">
              <div class="product-image-wrapper">
                <img src="{{ product.featured_image.src | image_url}}" width="150">
              </div>
              <div class="item-title-top">{{ product.title }}</div>
              <a class="learn-btn" href="{{ product.url }}">Learn More</a>
            </div>
          {% endfor %}
        {% endif -%}
      {% endfor %} {% endcomment %}
    </div>
    {% comment %} <div class="com-item">
      <div class="item-title">Color</div>
      <div class="row item-content">
        <div class="col-6 details">
          <span class="silver color-item"></span>
          <span class="red color-item"></span>
          <div>Calaxy Silver/ Lava Red And Coke Black</div>
        </div>
        <div class="col-6 details">
          <span class="silver color-item"></span>
          <span class="red color-item"></span>
          <div>Calaxy Silver/ Lava Red And Coke Black</div>
        </div>
      </div>
    </div> {% endcomment %}
    {% for item in product.metafields.custom.comparison.value.list %}
      {% if item.title == 'Color' %}
        <div class="com-item">
          <div class="item-title">{{item.title}}</div>
          <div class="row item-content">
            <div class="col-6 details">
              {% for color in item.gtu.colors %}
                <span class="color-item" style="background: {{ color }}"></span>
              {% endfor %}
              <div>{{item.gtu.value}}</div>
              {% comment %} <span class="silver color-item"></span>
              <span class="red color-item"></span>
              <div>Calaxy Silver/ Lava Red And Coke Black</div> {% endcomment %}
            </div>
            <div class="col-6 details">
              {% for color in item.gtp.colors %}
                <span class="color-item" style="background: {{ color }}"></span>
              {% endfor %}
              <div>{{item.gtp.value}}</div>
            </div>
          </div>
        </div>
        {% else %}
        <div class="com-item">
          <div class="item-title">{{ item.title }}</div>
          <div class="row item-content">
            <div class="col-6 details">{{ item.gtu | newline_to_br}}</div>
            <div class="col-6 details">{{ item.gtp | newline_to_br}}</div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
<style>
