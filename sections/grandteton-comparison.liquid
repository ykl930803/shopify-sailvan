    max-width: 1570px !important;
    padding: 80px 50px;
  }
  .grandteton-comparison .title {
    /* font-size: 40px;
    font-weight: 600; */
  }
  .grandteton-comparison table tr:nth-child(even) {
    background-color: rgb(250, 250, 250);
  }
  .grandteton-comparison .comparison-table {
    width: 100%;
    font-weight: 500;
  }
  .comparison-table .product-title {
    font-weight: 600;
    margin-bottom: 20px;
  }
  .comparison-table .learn-btn {
    padding: 10px 24px 10px 24px;
    border-radius: 35px;
    border: 1px solid #333333;
    color: #333333;
    text-decoration: none;
    cursor: pointer;
  }
  .comparison-table th {
    width: 30%;
  }
  .comparison-table td,th {
    padding: 20px;
  }
  .comparison-table .center-item {
    text-align: center;
  }
  .comparison-table .color-wrapper .color-item {
    display: inline-block;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    border: 1px solid #919191;
  }
  .comparison-table .color-wrapper .silver {
    background-color:  #DFDFDF;
  }
  .comparison-table .color-wrapper .red {
    background: linear-gradient(180deg, #FD2822 12.5%, #060606 97.06%);
  }
  .d-sm-look .com-item:nth-child(even) {
    background-color: rgb(250, 250, 250);
  }
  .d-sm-look .com-item {
    padding: 20px 0;
  }
  .d-sm-look .com-item:first-child {
    padding-top: 0;
  }
  .d-sm-look .item-title-top {
    margin-bottom: 20px;
    font-size: 16px;
    font-weight: 600;
  }
  .d-sm-look .item-title{
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 10px;
    padding-left: 20px;
  }
  .d-sm-look .item-content {
    font-weight:500;
    font-size:14px;
  }
  .d-sm-look .details {
    padding: 10px 20px;
  }
  .d-sm-look .color-item {
    display: inline-block;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    border: 1px solid #919191;
  }
  .d-sm-look .silver {
    background-color:  #DFDFDF;
  }
  .d-sm-look .red {
    background: linear-gradient(180deg, #FD2822 12.5%, #060606 97.06%);
  }
  .d-sm-look .learn-btn {
    padding: 5px 15px;
    font-weight: 500;
    border-radius: 35px;
    border: 1px solid #333333;
    color: #333333;
    text-decoration: none;
    cursor: pointer;
  }
  @media screen and (max-width: 768px) {
    .grandteton-comparison .title {
      /* font-size: 30px; */
    }
    .comparison-table td,th {
      padding: 10px;
    }
     .comparison-table .learn-btn {
       padding: 10px 4px;
     }
  }
  @media screen and (max-width: 480px) {
    .grandteton-comparison {
      padding: 40px 0 !important;
    }
  }
