{% javascript %}

    var slide = 1;
    var totalSlide = $('.data p').length;

    $('button.prev').on('click', function () {
        if (slide > 1) {
            slide--;
            triggerSlide(slide);
        }
        updateButtonState();
    });

    $('button.next').on('click', function () {
        if (slide < totalSlide) {
            slide++;
            triggerSlide(slide);
        }
        updateButtonState();
    });

    function triggerSlide(slide) {
        $(`.data p:eq(${slide - 1})`).addClass('active').siblings().removeClass('active');

        let title = $('.data p.active').data('title');
        let description = $('.data p.active').data('description');
        let image = $('.data p.active').data('image');

        let price = $('.data p.active').data('price');
        let body = $('.data p.active').data('body');
        let motor = $('.data p.active').data('motor');
        let battery = $('.data p.active').data('battery');

        // Add transition effect for opacity
        $('.text-data').css('opacity', 0);

        // Update content after a short delay
        setTimeout(() => {
            $('.text-data .price span').html(price);
            $('.text-data .body span').html(body);
            $('.text-data .motor span').html(motor);
            $('.text-data .battery span').html(battery);

            // Remove transition effect
            $('.text-data').css('opacity', 1);

            $('.slide').css('left', '-100%');

            setTimeout(() => {
                $('.slide .title').html(title);
                $('.slide .description').html(description);
                $('.slide img').attr('src', image);

                $('.slide').css('left', '0');
            }, 500);
        }, 300); // Adjust the delay according to your preference
    }

    function updateButtonState() {
        $('button.prev').toggleClass('active', slide > 1);
        $('button.next').toggleClass('active', slide < totalSlide);
    }

    
    //when scroll slide the object on the left side of this section slider
    function isInViewport(element) {
        var elementTop = $(element).offset().top;
        var elementHeight = $(element).outerHeight();
        var viewportTop = $(window).scrollTop();
        var viewportBottom = viewportTop + $(window).height();
        return elementTop + elementHeight / 2 < viewportBottom;
    }

    $(window).scroll(function() {
    // Check if section2 is in the viewport
    if (isInViewport('.feature-slider')) {
        // Add a class to trigger the slide animation
        $('.slide-wrapper-inner').addClass('slide-animation');
    }
    });
    
    
    
{% endjavascript %}

