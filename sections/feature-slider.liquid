<style>
  
section.feature-slider {
  background-color: {{ section.settings.bg_color }};
  padding-top: {{ section.settings.section_paddingTop }}px;
  padding-bottom: {{ section.settings.section_paddingBottom }}px;
  height: 100vh;
  min-height: 1050px;
}
section.feature-slider::after {
  content: "";
  display: block;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  width: 100%;
  max-width: 812px;
  height: 770px;
  position: absolute;
  z-index: 0;
  bottom: 55px;
  transform: translate(-50%, 0);
  left: 50%;
  {% if section.settings.show_background_image %} background-image: url('{{ section.settings.background_image | img_url: "master"}}');{% endif %}
}
section.feature-slider .container {
  height: 100%;
  box-sizing: border-box;
}
section.feature-slider .container-data {
  position: relative;
  height: 100%;
  z-index: 1;
}
section.feature-slider .container-data .data {
  display: none;
}
section.feature-slider .container-data .slide-wrapper-inner {
  position: absolute;
  top: 0;
  display: inline-block;
  width: 100%;
  opacity: 0;
  transform: translateX(-100%);
  transition: opacity 0.8s ease-in-out, transform 0.8s ease-in-out;
}
section.feature-slider .container-data .slide-wrapper-inner.slide-animation {
  opacity: 1;
  transform: translateX(0);
}
section.feature-slider .container-data .slide {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  transition: all 0.5s ease;
}
section.feature-slider .container-data .slide .description {
  font-size: 18px;
  margin: 15px 0 25px;
  max-width: 500px;
}
section.feature-slider .container-data .slide img {
  position: relative;
  top: -50px;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  max-width: 1024px;
  height: auto;
  margin-top: 40px;
}
section.feature-slider .container-data .text-data {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  gap: 70px;
  transition: opacity 0.4s ease;
}
section.feature-slider .container-data .text-data .text span {
  display: block;
  margin-top: 10px;
  padding-top: 10px;
  border-top: 1px solid black;
  text-transform: capitalize;
}
section.feature-slider .container-data .text-data .textData-label {
  text-transform: uppercase;
  color: #999999;
  font-size: 15px;
}
section.feature-slider .container-data .text-data .data-value, section.feature-slider .container-data .text-data .data-value p {
  font-weight: 500;
  font-size: 18px;
}
section.feature-slider .container-data .text-data.mobile {
  display: none;
}
section.feature-slider .container-data .floating-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  display: flex;
  gap: 25px;
}
section.feature-slider .container-data .floating-btn button {
  padding: 20px;
  background-color: transparent;
  color: #fff;
  font-size: 16px;
  border-radius: 27px;
  cursor: pointer;
  border: 1px solid #DADADA;
  width: 54px;
  height: 54px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: 0.4s ease;
}
section.feature-slider .container-data .floating-btn button.next {
  background-color: #1A1A1A !important;
}
section.feature-slider .container-data .floating-btn button.next img {
  filter: invert(1);
}
section.feature-slider .container-data div.floating-btn button.next:hover, section.feature-slider .container-data div.floating-btn button.prev:hover {
  background-color: #DB1629 !important;
}
section.feature-slider .container-data div.floating-btn button.next:hover img, section.feature-slider .container-data div.floating-btn button.prev:hover img {
  filter: invert(1);
}
section.feature-slider .container-data button.prev.active, section.feature-slider .container-data button.next.active {
  background-color: #1a1a1a !important;
}
section.feature-slider .container-data button.prev.active img, section.feature-slider .container-data button.next.active img {
  filter: invert(1);
}
.featProduct-content .mobile-button {
  display: none !important;
}

