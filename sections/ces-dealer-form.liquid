<section id="hnz-dealer-form">
    <div class="container section-content">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="title">
                    {{ section.settings.title }}
                </h3>
                <p class="body">
                    {{ section.settings.body }}
                </p>
            </div>
        </div>
        {% form 'contact', id: 'form-ces' %}
            <input type="hidden" name="contact[form]" value="Vanpowers - Become A Dealer">
            <input type="hidden" name="contact[from]" value="CES">
            <div class="row g-4">
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group">
                        <label>First Name <span>*</span></label>
                        <input type="text" name="contact[first_name]" placeholder="Enter your first name" required>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group">
                        <label>Last Name <span>*</span></label>
                        <input type="text" name="contact[last_name]" placeholder="Enter your kast name" required>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group">
                        <label>Email <span>*</span></label>
                        <input type="email" name="contact[email]" placeholder="Enter your email" required>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" name="contact[phone]" placeholder="Enter your phone">
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12">
                    <div class="form-group">
                        <label>What Vanpowers' products are you most interested in?</label>
                        <div class="checkbox-radio">
                            <input type="checkbox" name="contact[interest_1]" value="UrbanCross-Ultra"> UrbanCross-Ultra
                          </div>
                        <div class="checkbox-radio">
                            <input type="checkbox" name="contact[interest_2]" value="GrandTeton-Ultra"> GrandTeton-Ultra
                          </div>
                        <div class="checkbox-radio">
                            <input type="checkbox" name="contact[interest_3]" value="UrbanGlide"> UrbanGlide
                          </div>
                        <div class="checkbox-radio">
                            <input type="checkbox" name="contact[interest_4]" value="Cycanon"> Cycanon
                        </div>
                        <!-- <select name="contact[interest]" multiple size="4">
                            <option value="UrbanCross-Ultra">UrbanCross-Ultra</option>
                            <option value="GrandTeton-Ultra">GrandTeton-Ultra</option>
                            <option value="UrbanGlide">UrbanGlide</option>
                            <option value="Cycanon">Cycanon</option>
                        </select> -->
                    </div>
                </div>
                <!-- <div class="col-12">
                    <div class="form-group">
                        <label>How did you hear about us?</label>
                        <div class="checkbox-radio">
                            <input type="checkbox" name="contact[heard_from_1]" value="facebook"> Facebook
                        </div>
                        <div class="checkbox-radio">
                            <input type="checkbox" name="contact[heard_from_2]" value="Instagram"> Instagram
                        </div>
                        <div class="checkbox-radio">
                            <input type="checkbox" name="contact[heard_from_3]" value="Youtube"> Youtube
                        </div>
                        <div class="checkbox-radio">
                            <input type="checkbox" name="contact[heard_from_4]" value="Press Release"> Press Release
                        </div>
                        <div class="checkbox-radio">
                            <input type="checkbox" name="contact[heard_from_5]" value="Referral"> Referral
                        </div>
                        <div class="checkbox-radio">
                            <input type="checkbox" name="contact[heard_from_6]" value="Other"> Other
                        </div>
                    </div>
                </div> -->
                <div class="col-12 success-hide">
                    <div class="form-group">
                        <button type="submit" class="btn btn-modal">SUBMIT</button>
                    </div>
                </div>
                {% if form.posted_successfully? %}
                    <script>
                        document.addEventListener("DOMContentLoaded", function() {
                            document.querySelector('.success-hide').style.display = 'none';
                        });
                    </script>
                    <div class="col-12">
                        <div class="form-group">
                            <div class="alert success">
                                You're in! Thank you for submitting your request.
                            </div>
                        </div>
                    </div>
                {% elsif form.errors %}
                    <div class="col-12">
                        <div class="form-group">
                            <div class="alert error">
                                There's a problem sending your request. Try again.
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endform %}
    </div>
</section>

{% schema %}
    {
        "name": "Become Dealer Form",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "body",
                "label": "Body"
            }
        ],
      "presets": [{"name": "CES Dealer Form"}]
    }
{% endschema %}