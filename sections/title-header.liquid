<section class="header-background title-desktop" id={{section.id}}>
    <div class="center">
    {%  for block in section.blocks %}
        {%- if block.settings.title != blank -%}
            <h1 class="header-title"> {{block.settings.title}} </h1>
        {% endif %}
    {%endfor %}
    </div>
</section>


<style>
.header-background{
    height:100vh;
    position: relative;
    background-color:{{section.settings.background_color}};
    
    
}
.center{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.header-title{
    font-size:40px;
    font-weight:600;
    color:white;
    animation: zoom_in 0.5s ease forwards;
    animation-timeline: view();
}

@media (max-width: 480px) {
       .header-background h1{
            text-align:center;
            font-size:25px;
       }
    }
@keyframes zoom_in{
    from{
        opacity:0;
        transform: scale(0.6);
    }
    to{
        opacity:1;
        transform: scale(1);
    }
     60%{
        opacity:1;
    }
    50%{
        opacity:1;
    }
    30%{
        opacity:0;
    }

    
}
</style>
