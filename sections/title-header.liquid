</script>
{% schema %}
{
    "name": "Title Header", 
    "settings": [
        {
            "type": "number",
            "id": "section_paddingTop",
            "label": "Section Padding Top",
            "default": 100
        },
        {
            "type": "number",
            "id": "section_paddingBottom",
            "label": "Section Padding Bottom",
            "default": 100
        },
        {
            "type": "color",
            "id": "background_color",
            "label": "Background Color",
            "default": "#000000"
        }
    ],
    "blocks" : [
        {
        "type":"title",
        "name":"Title",
        "settings":
            [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading Text",
                    "default": "Heading Text"
                },
                {
                    "type": "color",
                    "id": "text_color",
                    "label": "Text Color",
                    "default": "#ffffff"
                }
            ]
        }
  
    ],
    "presets": [
      {
        "name": "Title Header"
      }
    ]
}
{% endschema %}