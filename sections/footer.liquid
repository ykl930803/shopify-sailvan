                                <input type="checkbox" id="toggle-menu-policy" class="toggle-input d-none">
                                <label for="toggle-menu-policy" class="footer-menu-title"><h6>Policy</h6></label>
                                <ul class="menu-items">
                                    {% assign parent_menu = link %}
                                    {% for child_link in parent_menu.links %}
                                        <li><a href="{{ child_link.url }}">{{ child_link.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                    {% endfor %}
                    <!-- End Policy -->

                    <!-- Company -->
                    {% for link in linklists.vanpowers-footer-menu.links %}
                        {% if link.title == 'Company' %}
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12 overflow-hidden">
                                <input type="checkbox" id="toggle-menu-company" class="toggle-input d-none">
                                <label for="toggle-menu-company" class="footer-menu-title"><h6>Company</h6></label>
                                <ul class="menu-items">
                                    {% assign parent_menu = link %}
                                    {% for child_link in parent_menu.links %}
                                        <li><a href="{{ child_link.url }}">{{ child_link.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                    {% endfor %}
                    <!-- End Company -->
                </div>
                  
            </div>
        </div>
        
        
