<div class="pre-footer">
    <div class="container container-panel pre-footer-wrapper">
        <div class="row d-flex align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <h2 class="text-white fw-bold">Sign up for new stuff and special offers.</h2>
                <h6 class="v-large text-white fw-normal" style="padding-top: 10px;">We promise not to be jerks about it.</h6>
            </div>
            <div class="col-lg-5 col-md-6  col-12 offset-lg-1">
                <form action="/contact#contact_form" method="post" id="contact_form" class="contact-form">
                    <div class="input-group--vanpowers position-relative">
                        <div class="form-outline">
                            <input class="form-control v-large" type="email" id="Email" name="contact[email]" placeholder="Enter your email" required>
                        </div>
                        <button type="submit" class="btn btn--secondary desktop-position-btn position-absolute"  aria-label="Subscribe Our Newsletter">Sign Me Up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<footer class="footer">
    <div class="container container-panel">
        <div class="row footer-firstRow">
            <div class="footer-infos col-xl-4 col-lg-4 col-md-12 col-sm-12">
                {%- if settings.footer_logo != blank -%}
                    <a href="https://{{ shop.permanent_domain }}" class="footer-logo d-table">
                        {{ settings.footer_logo | image_url: width: 250 | image_tag: srcset: nil }}
                    </a>
                {% endif %}
                <div class="social-links socialLinks-Desktop mb-4 d-flex">
                    <a href="{{settings.instagram_url}}"  class="text-decoration-none" target="_blank">
                        <img src="{{  'instagram-icon.svg' | asset_url }}"  width="25" height="auto" alt="Instagram">
                    </a>
                    <a href="{{settings.facebook_url}}" target="_blank"  class="text-decoration-none">
                        <img src="{{  'Facebook-icon.svg' | asset_url }}" width="25" height="auto" alt="Facebook">
                    </a>
                    <a href="{{settings.tiktok_url}}" target="_blank"  class="text-decoration-none">
                        <img src="{{  'tiktok-icon.svg' | asset_url }}" width="25" height="auto" alt="Tiktok">
                    </a>
                    <a href="{{settings.youtube_url}}"target="_blank"  class="text-decoration-none">
                        <img src="{{  'Youtube-icon.svg' | asset_url }}" width="25" height="auto" alt="Youtube">
                    </a>
                </div>
                {%- if settings.footer_address != blank -%}
                    <div class="footer-address">
                        {{ settings.footer_address }}
                    </div>
                {% endif %}
            </div>
            <div class="footer-menus col-xl-8 col-lg-8 col-md-12 col-sm-12">
                <div class="row">
                    <!-- Product -->
                    {% for link in linklists.vanpowers-footer-menu.links %}
                        {% if link.title == 'Product' %}
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12 position-relative overflow-hidden">
                                <input type="checkbox" id="toggle-menu-product" class="toggle-input d-none">
                                <label for="toggle-menu-product" class="footer-menu-title"><h6>Shop</h6></label>
                                <ul class="menu-items">
                                    {% assign parent_menu = link %}
                                    {% for child_link in parent_menu.links %}
                                        <li><a href="{{ child_link.url }}">{{ child_link.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                    {% endfor %}
                    <!-- End Product -->

                    <!-- Community -->
                    {% for link in linklists.vanpowers-footer-menu.links %}
                        {% if link.title == 'Community' %}
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12 overflow-hidden">
                                <input type="checkbox" id="toggle-menu-community" class="toggle-input d-none">
                                <label for="toggle-menu-community" class="footer-menu-title"><h6>Community</h6></label>
                                <ul class="menu-items">
                                    {% assign parent_menu = link %}
                                    {% for child_link in parent_menu.links %}
                                        <li><a href="{{ child_link.url }}">{{ child_link.title }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}
                    {% endfor %}
                    <!-- End Community -->

                    <!-- Policy -->
