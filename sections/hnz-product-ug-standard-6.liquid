<section id="hnz-product-6" {% if section.settings.show == false %}style="display: none;"{% endif %}>
    <div class="container section-content">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="title">
                    {{ section.settings.title }}
                </h2>
            </div>
        </div>
        <div class="hozscroll">
            <div class="row">

                <div class="compare">

                    <div class="row">
                        {% for block in section.blocks %}
                            <div class="col-lg-4 col-md-5 col-sm-5 d-flex flex-column justify-content-between">
                                <div>
                                    <img src="{{ block.settings.product.featured_image | img_url: 'master' }}">
                                    <div class="variant-wrapper">
                                        {% render 'product-variant-colors', product: block.settings.product %}
                                    </div>
                                    <h5 class="product-title">
                                        {{ block.settings.product.title }}
                                    </h5>
                                </div>
                                <div>
                                    <p class="description">
                                        {{ block.settings.description }}
                                    </p>
                                    <h4 class="price">
                                        FROM {{ block.settings.product.price_min | money }}
                                    </h4>
                                    <a class="btn btn-white-o" href="{{ block.settings.product.url }}">
                                        Learn More
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="row d-lg-flex d-md-none d-sm-none">
                        <div class="col-12">
                            <div class="divider"></div>
                        </div>
                    </div>
                    
                    <div class="row">
                        {% for block in section.blocks %}
                            <div class="col-lg-4 col-md-5 col-sm-5">
                                <p class="sizes">
                                    {% for option in block.settings.product.options_with_values %}
                                        {% if option.name == 'Size' %}
                                            {% for value in option.values %}{{ value }}{% unless forloop.last %}/{% endunless %}{% endfor %}
                                        {% endif %}
                                    {% endfor %}
                                </p>
                                <p class="value">
                                    {{ block.settings.product.metafields.custom.urbanglide_series_specs.value.sizes | newline_to_br }}
                                </p>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="row">
                        {% for block in section.blocks %}
                            <div class="col-lg-4 col-md-5 col-sm-5">
                                <img class="icon" src="{{ block.settings.product.metafields.custom.urbanglide_series_specs.value.riding_position_icon | img_url: 'master' }}">
                                <p class="value">
                                    {{ block.settings.product.metafields.custom.urbanglide_series_specs.value.riding_position }}
                                </p>
                            </div>
                        {% endfor %}
                    </div>

