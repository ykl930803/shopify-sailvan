<section id="hnz-text-image">
    <div class="container section-content">
        <div class="row g-lg-5 g-md-4 g-sm-4 align-items-center">
            <div class="col-lg-6 col-md-12 col-sm-12 order-lg-1 order-md-2 order-sm-2">
                <h5 class="title">
                    {{ section.settings.title }}
                </h5>
                <p class="body">
                    {{ section.settings.body | newline_to_br }}
                </p>
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12 order-lg-2 order-md-1 order-sm-1">
                <img src="{{ section.settings.image | img_url: 'master' }}">
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Text Image",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "body",
                "label": "Body"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
        ],
      "presets": [{"name": "Text Image"}]
    }
{% endschema %}