{% render 'reusable-imageHotspot-with-3d-tab' %}

<style>
    section.imageHotspot-with-3d-tab {
        padding-top: {{ section.settings.section_paddingTop }}px;
        padding-bottom: {{ section.settings.section_paddingBottom }}px;
        background-color: #F8F8F8;
    }
    .imageHotspot-with-3d-tab .nav-tabs {
        display: flex;
        justify-content: center;
        border: 0;
        position: relative;
        z-index: 1;
    }
    .imageHotspot-with-3d-tab .nav-tabs a {
        font-size: 28px;
        text-decoration: none;
        font-weight: 600;
        color: #999999;
        border-bottom: 5px solid #D9D9D9;
        padding: 15px 25px;
        transition: 0.4s ease;
    }
    .imageHotspot-with-3d-tab .nav-tabs a.active {
        color: #1D1D1F;
        border-color: #1D1D1F;
    }
    .imageHotspot-with-3d-tab .product-3d-media model-viewer {
        height: 100%;
        width: 100%;
    }
    .imageHotspot-with-3d-tab .product-3d-media {
        margin-top: -100px;
    }
    .pointBoxClose, .pointBoxArrow {
        display: none;
    }
    .pointBox.fadeInUp {
        -webkit-animation: none;
    }
    #tab1-content {
        background-image: url('{{ section.settings.tabContent1_background | img_url: "master" }}');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center -75px;
    }
    #tab2-content {
        background-image: url('{{ section.settings.tabContent2_background | img_url: "master" }}');
        background-size: 1200px;
        background-repeat: no-repeat;
        background-position: center center;
    }
</style>

