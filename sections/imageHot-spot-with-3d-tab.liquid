{% endjavascript %}

{% schema %}
{
    "name": "Image Hotspot + 3D Tab",
    "settings": [
        {
            "type": "number",
            "id": "section_paddingTop",
            "label": "Section Padding Top",
            "default": 100
        },
        {
            "type": "number",
            "id": "section_paddingBottom",
            "label": "Section Padding Bottom",
            "default": 100
        },
        {
            "type": "text",
            "id": "tab_1",
            "label": "Tab 1"
        },
        {
            "type": "image_picker",
            "id": "tabContent1_background",
            "label": "Tab 1 Content Background"
        },
        {
            "type": "text",
            "id": "hotspotImage_id",
            "label": "Image Hotspot ID"
        },
        {
            "type": "text",
            "id": "tab_2",
            "label": "Tab 2"
        },
        {
            "type": "image_picker",
            "id": "tabContent2_background",
            "label": "Tab 2 Content Background"
        },
        {
            "type": "text",
            "id": "glbFile_url",
            "label": "Please input glb file url from content media files."
        }

    ],
    "presets": [
      {
        "name": "Image Hotspot + 3D Tab"
      }
    ]
}
{% endschema %}