<section id="hnz-community-gallery" style="background: {{ section.settings.background_color }};">
    <div class="container section-content">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="title">
                    {{ section.settings.title }}
                </h2>

                <p class="body">
                    {{ section.settings.body }}
                </p>
            </div>
        </div>

        <div class="grid d-lg-grid d-md-none d-sm-none">
            <div class="image-1">
                <img src="{{ section.settings.image_1 | img_url: 'master' }}">
            </div>
            <div class="image-2">
                <img src="{{ section.settings.image_2 | img_url: 'master' }}">
            </div>
            <div class="image-3">
                <img src="{{ section.settings.image_3 | img_url: 'master' }}">
            </div>
            <div class="image-4">
                <img src="{{ section.settings.image_4 | img_url: 'master' }}">
            </div>
            <div class="image-5">
                <img src="{{ section.settings.image_5 | img_url: 'master' }}">
            </div>
            <div class="image-6">
                <img src="{{ section.settings.image_6 | img_url: 'master' }}">
            </div>
        </div>
        
        <div class="row g-4 d-lg-none d-md-flex-d-sm-flex">
            <div class="col-6">
                <img src="{{ section.settings.image_1 | img_url: 'master' }}">
            </div>
            <div class="col-6">
                <img src="{{ section.settings.image_2 | img_url: 'master' }}">
            </div>
            <div class="col-12">
                <img src="{{ section.settings.image_3 | img_url: 'master' }}">
            </div>
            <div class="col-12">
                <img src="{{ section.settings.image_4 | img_url: 'master' }}">
            </div>
            <div class="col-12">
                <img src="{{ section.settings.image_5 | img_url: 'master' }}">
            </div>
            <div class="col-12">
                <img src="{{ section.settings.image_6 | img_url: 'master' }}">
            </div>
        </div>

    </div>
</section>

{% schema %}
    {
        "name": "Community Gallery",
        "settings": [
            {
                "type": "color",
                "id": "background_color",
                "label": "Background Color"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "body",
                "label": "Body"
            },
            {
                "type": "image_picker",
                "id": "image_1",
                "label": "1. Image"
            },
            {
                "type": "image_picker",
                "id": "image_2",
                "label": "2. Image"
            },
            {
                "type": "image_picker",
                "id": "image_3",
                "label": "3. Image"
            },
            {
                "type": "image_picker",
                "id": "image_4",
                "label": "4. Image"
            },
            {
                "type": "image_picker",
                "id": "image_5",
                "label": "5. Image"
            },
            {
                "type": "image_picker",
                "id": "image_6",
                "label": "6. Image"
            }
        ]
    }
{% endschema %}