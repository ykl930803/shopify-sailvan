<section id="hnz-product-2">
  <div class="container section-content">
    <div class="row d-lg-flex d-md-none d-sm-none justify-content-center">
      {% for block in product.metafields.custom.parameters.value.list %}
        {% comment %} col-lg-2 col-md-4 col-sm-6  {% endcomment %}
        {% comment %} <div class="flex-grow-1"> {% endcomment %}
        <div class="spec flex-1">
          <img src="{{ block.image }}">
          <div class="d-flex flex-column">
            <h5 class="title">
              {{ block.title }}
            </h5>
            <p class="value">
              {{ block.value }}
            </p>
          </div>
        </div>
        {% comment %} </div> {% endcomment %}
      {% endfor %}
    </div>
    <div class="specs d-lg-none d-md-flex d-sm-flex">
      <div class="row gy-4">
        {% for block in product.metafields.custom.parameters.value.list %}
          <div class="col-lg-2 col-md-4 col-sm-6">
            <div class="spec">
              <img src="{{ block.image }}" width="50px">
              <div class="d-flex flex-column">
                <h5 class="title">
                  {{ block.title }}
                </h5>
                <p class="value">
                  {{ block.value }}
                </p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<style>
  .flex-1 {
    flex: 1;
  }
</style>
{% schema %}
  {
    "presets": [{"name": "Parameters"}]
  }
{% endschema %}
