{% render 'resuableComponent-slideup' %}

<section class="{{section.id}} slideup-desktop">
    <div class="container ">
        <div class=" d-flex flex-direction-column ">
                <div class="scrollup-images " >
                        <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="{{ section.settings.sub_desc_1 }}"  class="tabcontent " id="0">
                        <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="{{ section.settings.sub_desc_2 }}"  class="tabcontent  "  id="1">
                        <img src="{{ section.settings.image_3 | img_url: 'master' }}" alt="{{ section.settings.sub_desc_3 }}"  class="tabcontent  "  id="2">
                        <img src="{{ section.settings.image_4 | img_url: 'master' }}" alt="{{ section.settings.sub_desc_4 }}" class="tabcontent "  id="3">
                        <img src="{{ section.settings.image_5 | img_url: 'master' }}" alt="{{ section.settings.sub_desc_5 }}"   class="tabcontent  "  id="4">
                </div>
                <div class="right-side-text " >
                    <h2>{{section.settings.title}}</h2>
                    <ul>
                    <li id="defaultOpen" class="tablinks" onclick="openCity(event, '0', '-1')">{{section.settings.sub_desc_1}}</li>
                    <li class="tablinks" onclick="openCity(event, '1', '0')">{{section.settings.sub_desc_2}}</li>
                    <li class="tablinks" onclick="openCity(event, '2', '1')">{{section.settings.sub_desc_3}}</li>
                    <li class="tablinks" onclick="openCity(event, '3', '2')">{{section.settings.sub_desc_4}}</li>
                    <li class="tablinks" onclick="openCity(event, '4', '3')">{{section.settings.sub_desc_5}}</li>
                    </ul>
                </div>
        </div>
    </div>
</section>






<style>
 


.{{section.id}}{
    Background-color:{{section.settings.bg_color}};
    padding-top:70px;
        justify-content: center;
        flex-direction: column;
        align-items: center;
}
.{{section.id}} .right-side-text{
    width:500px;
}
.{{section.id}} .right-side-text h2{
    color:white;
    font-weight: 600;
}
.{{section.id}} .right-side-text ul{
    margin-top:40px;
}
.{{section.id}} .right-side-text li{
    color:{{section.settings.txt_color}};
    list-style-type: none;
    margin-left:-30px;
    padding-top:20px;
    padding-bottom:20px;
    padding-left:50px;
    border-left: 1px solid {{section.settings.txt_color}};
    cursor: pointer;
    word-wrap: break-word;

}
.{{section.id}} .right-side-text li:hover{
    color:white;
    border-left: 2px solid white;
    padding-left:49px;
}

.{{section.id}} .right-side-text li.active{
    color:white;
    border-left: 2px solid white;
}

.{{section.id}} .scrollup-images {
    width:60%;
    position:relative;
    height:65vh;
    display:flex;
    align-items:center;
    {% comment %} justify-content:center; {% endcomment %}
    flex-direction: column;
    overflow:hidden;    

    img{
        width:75%;
        opacity:0;
        padding-right:-40px;
        padding:0;
        position:sticky;
        top:0;
        border-radius:20px;
        z-index:2;
        margin-bottom:70px;
    }
    img.active{
        border-radius:20px;
        position:absolute;
        z-index:3 !important;
        width:80%;
        padding-right:-40px;
        top:30px; 
        box-shadow: 0px -7px 24px 18px rgba(0,0,0,0.1);
         animation: fade-in-active 1s  both;
    }
     img.previous{
        border-radius:20px;
        z-index:1 !important;
        position:absolute;
         animation: fade-in-previous 1s  forwards;
    } 
}
@keyframes fade-in-active {
     100% {
        transform: translateY(0);
        opacity: 1;
    }
    75% {
        transform: translateY(0);
        opacity: 1;
    }
    25% {
        transform: translateY(0);
        opacity: 1;
    }
    0% {
        transform: translateY(400px);
        opacity: 0;
    }
    
}
@keyframes fade-in-previous {

    100% {
        transform: translateY(0);
        width:75%;
        opacity: 1;
    }
    75% {
        transform: translateY(0);
        opacity: 1;
    }
    25% {
        transform: translateY(0);
        opacity: 1;
    }
    0% {
        transform: translateY(20px);
        width:80%;
        opacity: 0;
    }

}

@media (max-width: 480px) {
        .slideup-desktop {
            display: none;
        }
    }
</style>

<script>

function openCity(evt, cityName, prev) {
  var i, tabcontent, tablinks, num = 0;

  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].classList.remove("active");
    tabcontent[i].classList.remove("previous");
  }
  if(prev != -1){
    tabcontent[prev].classList.add("previous"); // Add "previous" class to all tabcontents initially
  }
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].classList.remove("active");
  }

  // Activate the clicked city and remove "previous" class
  var cityElement = document.getElementById(cityName);
  cityElement.classList.remove("previous");
  cityElement.classList.add("active");

  evt.currentTarget.classList.add("active");
}
// Get the element with id="defaultOpen" and click on it
document.getElementById("defaultOpen").click();  
</script>


