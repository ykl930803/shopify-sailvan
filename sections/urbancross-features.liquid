    // swiper js
    document.addEventListener('DOMContentLoaded', function() {
        function initializeSwiper(selector) {
        return new Swiper(selector, {
            direction: 'horizontal',
            speed: 1000,
            width: 500,
            spaceBetween: 30,
            autoplay: false,
            navigation: {
                nextEl: '.urbancross-features .swiper-button-next',
                prevEl: '.urbancross-features .swiper-button-prev',
            },
            pagination: {
                el: '.urbancross-features .swiper-pagination',
                type: 'progressbar',
            },
            breakpoints: {
                200: { width: 275, spaceBetween: 15 },
                430: { width: 271, spaceBetween: 15 },
                768: { width: 305 },
                1024: { width: 235 },
                1280: { width: 294 },
                1536: { width: 363 },
                1600: { width: 368 },
                1920: { width: 454 },
            },
        });
        }
  
        initializeSwiper('.urbancross-features .swiper-best-sale');
  
        window.addEventListener('resize', initializeSwiper('.urbancross-features .swiper-best-sale'))
    });
