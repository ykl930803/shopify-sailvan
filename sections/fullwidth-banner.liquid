            "label": "Button link"
        },
        {
            "type": "select",
            "id": "content_alignment",
            "label": "Content alignment",
            "options": [
                {
                "value": "top",
                "label": "Top"
                },
                {
                "value": "middle",
                "label": "Middle"
                },
                {
                "value": "bottom",
                "label": "Bottom"
                },
                {
                    "value": "left",
                    "label": "Left"
                }
            ],
            "default": "middle"
        }

    ],
    "presets": [
      {
        "name": "Full width baner"
      }
    ]
}
{% endschema %}